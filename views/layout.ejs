<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title || 'Deutschlehrer' %></title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,sans-serif;margin:0;background:#f5f5f5}
    .container{max-width:1200px;margin:0 auto;padding:20px}
    .card{background:#fff;border-radius:10px;box-shadow:0 2px 10px rgba(0,0,0,.08);padding:20px;margin-bottom:20px}
    .btn{display:inline-block;background:#007bff;color:#fff;padding:8px 14px;border-radius:6px;text-decoration:none;margin-right:8px}
    .muted{color:#666}
    .pill{display:inline-block;padding:2px 10px;border-radius:14px;background:#e9ecef;margin-left:8px;font-weight:600}
    .hero{text-align:center;padding:40px 20px}
    .hero h1{font-size:2.5em;color:#333;margin-bottom:20px}
    .hero p{font-size:1.2em;color:#666;margin-bottom:30px}
    .features{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:20px;margin:40px 0}
    .feature{background:#fff;padding:20px;border-radius:10px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
    .feature h3{color:#007bff;margin-bottom:10px}
    .cta{margin-top:40px;padding:20px;background:#fff;border-radius:10px}
    .cta p{margin:10px 0}
  </style>
</head>
<body>
  <div class="container">
    <%- content || body || '' %>
  </div>
</body>
</html>

